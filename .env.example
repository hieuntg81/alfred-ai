# alfred-ai Environment Variables
# Copy this file to .env and fill in your values.

# ── LLM Provider API Keys ────────────────────────────────────────────
# At least one provider key is required.
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GEMINI_API_KEY=
OPENROUTER_API_KEY=

# ── Channel Tokens ───────────────────────────────────────────────────
# Configure the channels you want to use.
TELEGRAM_BOT_TOKEN=
DISCORD_BOT_TOKEN=
SLACK_BOT_TOKEN=
SLACK_APP_TOKEN=
WHATSAPP_TOKEN=
WHATSAPP_PHONE_ID=
WHATSAPP_VERIFY_TOKEN=
WHATSAPP_APP_SECRET=
MATRIX_HOMESERVER=
MATRIX_ACCESS_TOKEN=
MATRIX_USER_ID=

# ── Docker Compose Settings ──────────────────────────────────────────
# Port mappings for docker-compose
ALFREDAI_PORT=8080
ALFREDAI_GATEWAY_PORT=8090
SEARXNG_PORT=6060

# Set to "true" to install Chromium in the container (for browser tool)
INSTALL_BROWSER=false

# ── Security ─────────────────────────────────────────────────────────
# Encryption key for memory at rest (generate with: openssl rand -hex 32)
ALFREDAI_ENCRYPTION_KEY=

# ── Memory ───────────────────────────────────────────────────────────
# Ollama embedding endpoint (for vector memory)
OLLAMA_BASE_URL=http://localhost:11434
